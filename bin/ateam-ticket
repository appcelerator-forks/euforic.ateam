#!/usr/bin/env node

/**
 * Module dependencies.
 */

// inject shelljs to the global scope

require('shelljs/global');

var program = require('commander')
  , ticket = require('../lib/tickets')
  , AVAIL_CMDS = Object.keys(ticket);

// usage

program.usage('<command> <number>');

// examples

program.on('--help', function(){
  console.log('  view    <number>  view ticket on jira');
  console.log('  fix     <number>  creates a new git branch for the ticket');
  console.log('  close   <number>  rm ticket git branches and open ticket in jira');
  //console.log('  review  <number>  create a new git branch to review ticket');
  console.log();
  process.exit();
});

// parse argv

program.parse(process.argv);

// package

var task = program.args.shift();

// props

var tnumber = program.args.shift();

// check if command is valid

if ( AVAIL_CMDS.indexOf(task) < 0 ) {
  exec('ateam ticket --help');
  process.exit();
}

// dynamical call requested ticket function

ticket[cmd]( tnumber );