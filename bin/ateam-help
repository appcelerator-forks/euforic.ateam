#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander');

// usage

program.usage('ateam ticket <number>');

// examples

program.on('--help', function(){
  console.log();
  console.log('  # ATEAM - Appcelerator Team CLI Interface');
  console.log();
  console.log('  ## USAGE');
  console.log('  ateam ticket <number> fix     creates a new git branch for the ticket');
  console.log('  ateam ticket <number> pullreq submit pull request to upstream branch');
  console.log('  ateam ticket <number> close   rm ticket branches and open in jira');
  console.log('  ateam ticket <number> review  create a new git branch to review ticket');
  console.log('  ateam tcase  <ticket> <platform>   creates a mobile web test case');
  console.log('  ateam tcase  <ticket> done         removes the requested test case');
});

// parse argv

program.parse(process.argv);