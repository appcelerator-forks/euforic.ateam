#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander')
  , spawn = require('win-spawn');

// usage

program
  .usage('<command> [options]');

// sub-command help

program.on('--help', function(){
  console.log();
  console.log('  # ATEAM - Appcelerator Team CLI Interface');
  console.log();
  console.log('  ticket <number> view         view ticket on jira');
  console.log('  ticket <number> fix          creates a new git branch for the ticket');
  console.log('  ticket <number> pullreq      submit pull request to upstream branch');
  console.log('  ticket <number> close        rm ticket branches and open in jira');
  console.log('  ticket <number> review       create a new git branch to review ticket');
  console.log('  tcase  <number> <platform>   creates a mobile web test case');
  console.log('  tcase  <number> close        removes the requested test case');
  process.exit();
});

// parse argv

program.parse(process.argv);

// args void of cmd

var args = process.argv.slice(3);

// command

var cmd = program.args[0];

if (!cmd) {
  process.stdout.write(program.helpInformation());
  program.emit('--help');
  process.exit();
}

// executable

var bin = 'ateam-' + cmd;

// spawn

var proc = spawn(bin, args, { stdio: 'inherit', customFds: [0, 1, 2] });